{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "es5"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false
}
